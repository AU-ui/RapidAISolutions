rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Proposal PDFs - clients can only access their own files
    match /proposals/{clientId}/{fileName} {
      allow read, write: if request.auth != null && 
        request.auth.uid == clientId;
    }
    
    // General rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 